

<h2>FACULTIES WITH FUNNDED PROJECTS</h2>



<table class="table table-striped table-bordered table-hover">
  <thead class='thead-dark'>
    <tr>
      <th >Faculty ID</th>
      <th >Faculty Name</th>
      <th >Project Description</th>
      <th >Funding Organization</th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
    <tr>
      <td><%= faculty.faculty_id %></td>
      <td><%= faculty.faculty_name %></td>
      <td><%= faculty.project_description %></td>
      <td><%= faculty.funding_organization %></td>
      <td><%= link_to 'Show', faculty, class:"btn btn-secondary"%></td>
    </tr>
    <% end %>
  </tbody>

</table>

<% if user_signed_in? and current_user.admin %>
  <%= link_to "Add New Faculty", new_faculty_path,  class:"btn btn-primary" %>
<% end %>
